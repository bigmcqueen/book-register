<%= form_tag("/posts/#{@post.id}/update") do %>
  <form>
    <div class="mb-3">
      <label class="form-label">編集する</label>
      <textarea class="form-control" rows="3" name="thoughts"><%= @post.thoughts %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">保存</button>
  </form>
<% end %>