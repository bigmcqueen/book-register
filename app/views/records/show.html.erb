<h1>登録本「<%= @record.title %>」の詳細</h1>
<br>
<%= link_to "一覧", "/records/index" %>
<div class="mt-3">
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">ID</th>
        <td><%= @record.id %></td>
      </tr>
      <tr>
        <th scope="row">タイトル</th>
        <td><%= @record.title %></td>
      </tr>
      <tr>
        <th scope="row">感想</th>
        <td><%= @record.thoughts %></td>
      </tr>
      <tr>
        <th scope="row">登録日時</th>
        <td><%= @record.created_at.to_fs(:datetime_jp) %></td>
      </tr>
      <tr>
        <th scope="row">更新日時</th>
        <td><%= @record.updated_at.to_fs(:datetime_jp) %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="row mt-3">
  <div class="col-1">
    <% if Favorite.find_by(user_id: @current_user.id, record_id: @record.id) %>
      <%= button_to "/favorites/#{@record.id}/destroy", {class: "btn btn-danger"} do %>
        <span class="fa fa-heart liked-btn"></span>
      <% end %>
    <% else %>
      <%= button_to "/favorites/#{@record.id}/create", {class: "btn btn-outline-danger"} do %>
        <span class="fa fa-heart-o"></span>
      <% end %>
    <% end %>
  </div>
  <div class="col-1">
    <%= link_to "編集","/records/#{@record.id}/edit", {class: "btn btn-primary"} %>
  </div>
  <div class="col-1">
    <%= button_to "削除", "/records/#{@record.id}/destroy", {class: "btn btn-danger"} %>
  </div>
</div>