<div class="container">
  <div class="card  mx-auto" style="margin-top: 50px;">
    <div class="card-body">
      <h5 class="card-title"><%= @post.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= @post.created_at.to_fs(:datetime_jp) %></h6>
      <p class="card-text"><%= @post.thoughts %></p>
      <a href="/posts/<%= @post.id %>/edit" class="card-link">編集</a>
      <a href="#" class="card-link">削除</a>
    </div>
  </div>
</div>