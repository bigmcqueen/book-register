<div class="text-light">
  <h1>投稿一覧</h1>
  <table class="table text-light">
    <thead>
      <tr>
        <th scope="col">タイトル</th>
        <th scope="col">作成日</th>
        <th scope="col">更新日</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to(post.title, "/posts/#{post.id}") %></td>
          <td><%= post.created_at.to_fs(:datetime_jp) %></td>
          <td><%= post.updated_at.to_fs(:datetime_jp) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>